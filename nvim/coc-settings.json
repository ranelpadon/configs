{
    "explorer.openAction.relativePath": true,
    "explorer.width": 35,
    "explorer.mouseMode": "singleclick",
    "explorer.file.reveal.auto": true,
    "explorer.file.reveal.whenOpen": true,
    "explorer.file.showHiddenFiles": false,
    "explorer.file.column.indent.indentLine": true,
    "explorer.icon.enableVimDevicons": false,
    "explorer.icon.enableNerdfont": false,
    "explorer.previewAction.onHover": false,
    "explorer.git.enable": true,
    "explorer.file.git.showUntrackedFiles": true,
    "explorer.git.showIgnored": false,
    "explorer.keyMappings.global": {
        "<cr>": ["expandable?",  ["expanded?", "collapse", "expand"], "open"],
        "l": ["expandable?",  ["expanded?", "collapse", "expand"], "open"],
        "i": ["expandable?",  ["expanded?", "collapse", "expand"], "open"],
        "il": false,
        "ic": false,
        "ii": false,
        "e": false,
        "E": false
    },
    "explorer.file.root.template": "[icon] [root]",
    "explorer.file.child.template": "[selection | clip | 1] [indent][icon | 1] [diagnosticError & 1][filename omitCenter 1][modified][readonly]",
    "explorer.file.hiddenRules": {
        "extensions": [
            "o",
            "a",
            "obj",
            "pyc"
        ],
        "filenames": [
            ".DS_Store",
            ".netrwhist",
            ".vscode",
            ".idea"
        ],
        "patternMatches": [
            "^sync"
        ]
    },

    // https://github.com/fannheyward/coc-pyright/blob/master/package.json#L92
    "pyright.enable": true,

    // Use external linter like `flake8` via ALE, instead of internal `pyright`.
    "python.linting.enabled": false,
    "python.linting.flake8Enabled": false,

    "python.analysis.autoImportCompletions": false,
    "python.analysis.useLibraryCodeForTypes": true,
    "python.analysis.typeCheckingMode": "off",
    "pyright.completion.importSupport": false,
    "pyright.completion.snippetSupport": false,

    "pyright.disableDiagnostics": true,

    // Disable the annoying "`foo` is not accessed" warnings since `flake8` handles it also.
    // https://github.com/fannheyward/coc-pyright/issues/865
    // https://github.com/fannheyward/coc-pyright/issues/271#issuecomment-764172559
    // https://github.com/fannheyward/coc-pyright/issues/107#issuecomment-719464989
    "diagnostic.showUnused": false,

    "pyright.disableDocumentation": true,
    "pyright.disableProgressNotifications": false,
    "pyright.inlayHints.functionReturnTypes": false,
    "pyright.inlayHints.variableTypes": false,
    "pyright.organizeimports.provider": "isort",

    // For `coc-python` only.
    // `coc-pyright` uses `python.analysis.extraPaths`:
    // https://github.com/fannheyward/coc-pyright/blob/master/package.json#L118
    "python.autoComplete.extraPaths": [
        "/Users/ranelpadon/dev/ticketing-v2/apps",
        "/Users/ranelpadon/dev/ticketing-v2/conf"
    ]
}
